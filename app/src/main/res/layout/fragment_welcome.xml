<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.WelcomeFragment">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:text="@string/welcome"/>

    <ImageView
        android:id="@+id/imageViewStartImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcome"
        android:src="@drawable/image_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/start_image" />

    <TextView
        android:id="@+id/textViewAppDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_description"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewStartImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonContinue"
        android:textSize="16sp"
        android:textColor="@color/black"
        tools:text="    Для начала необходимо выбрать уровень сложности. Правила игры следующие: в центральном круге вы увидите число, слева и снизу от него в квадрате еще одно. Ваша задача - выяснить, какое число  должно стоять в квадрате справа, чтобы сумма значений в квадратах равнялась числу в центральном круге.\nПример:\n    В центральном круге число 9, слева в квадрате - 3, значит в правом квадрате должно быть число 6.\n     Время теста ограничено.\n     Удачи!"/>

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/continue_from_welcome_fragment" />
</androidx.constraintlayout.widget.ConstraintLayout>